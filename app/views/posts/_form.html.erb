<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, multiple: true, direct_upload: false %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :work_type, style: "display: block" %>
    <%= form.select(:work_type, options_for_select(Post::WORK_TYPES)) %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.rich_text_area :body %>
  </div>

  <div>
    <%= form.label :visibility, style: "display: block" %>
    <%= form.select(:visibility, options_for_select(Post::VISIBILITY_OPTIONS)) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
