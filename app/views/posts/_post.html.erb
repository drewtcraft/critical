<div id="<%= dom_id post %>">
  <p>
    <strong>title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Visibility:</strong>
    <%= post.visibility %>
  </p>

  <p>
    <strong>Images</strong>
    <% post.images.each do |image| %>
      <% if image.representable? %>
        <%= image_tag image.representation(resize_to_limit: [100, 100]).processed.url %>
      <% end %>
    <% end %>
  </p>
</div>
